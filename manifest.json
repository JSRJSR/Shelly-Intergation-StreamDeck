{
  "Name": "Shelly Integration",
  "Version": "1.0.0",
  "Author": "",
  "CodePath": "bin/plugin.js",
  "Description": "Control Shelly Plus 1 and Shelly Plus RGBW PM devices from your Stream Deck",
  "Icon": "imgs/icon.png",
  "URL": "https://github.com",
  "SDKVersion": 2,
  "Software": {
    "MinimumVersion": "6.0"
  },
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    },
    {
      "Platform": "mac",
      "MinimumVersion": "11"
    }
  ],
  "Actions": [
    {
      "Name": "Toggle",
      "UUID": "com.shelly.toggle",
      "Icon": "imgs/actions/toggle.png",
      "Tooltip": "Toggle Shelly device on/off",
      "PropertyInspectorPath": "ui/index.html",
      "States": [
        {
          "Image": "imgs/actions/toggle-off.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        },
        {
          "Image": "imgs/actions/toggle-on.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        }
      ]
    },
    {
      "Name": "Turn On",
      "UUID": "com.shelly.on",
      "Icon": "imgs/actions/on.png",
      "Tooltip": "Turn Shelly device on",
      "PropertyInspectorPath": "ui/index.html",
      "States": [
        {
          "Image": "imgs/actions/on.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        }
      ]
    },
    {
      "Name": "Turn Off",
      "UUID": "com.shelly.off",
      "Icon": "imgs/actions/off.png",
      "Tooltip": "Turn Shelly device off",
      "PropertyInspectorPath": "ui/index.html",
      "States": [
        {
          "Image": "imgs/actions/off.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        }
      ]
    },
    {
      "Name": "Dimming",
      "UUID": "com.shelly.dimming",
      "Icon": "imgs/actions/dimming.png",
      "Tooltip": "Control brightness/dimming",
      "PropertyInspectorPath": "ui/index.html",
      "States": [
        {
          "Image": "imgs/actions/dimming.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        }
      ]
    },
    {
      "Name": "RGBW Color",
      "UUID": "com.shelly.rgbw",
      "Icon": "imgs/actions/rgbw.png",
      "Tooltip": "Control RGBW color",
      "PropertyInspectorPath": "ui/rgbw-picker.html",
      "States": [
        {
          "Image": "imgs/actions/rgbw.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        }
      ]
    },
    {
      "Name": "Status",
      "UUID": "com.shelly.status",
      "Icon": "imgs/actions/status.png",
      "Tooltip": "Display device status",
      "PropertyInspectorPath": "ui/index.html",
      "States": [
        {
          "Image": "imgs/actions/status.png",
          "TitleAlignment": "middle",
          "FontSize": "16"
        }
      ]
    }
  ]
}

